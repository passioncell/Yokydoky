@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("안녕하세요 " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">로그오프</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @if (Session[YokyDoky.claGlobal.SessionString_UserID] != null)
        {
            <li>@Html.ActionLink("로그아웃", "Logout", "Home")</li>
        }
        else
        {
            <li>@Html.ActionLink("회원가입", "SignUp", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("로그인", "SignIn", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
      
    </ul>
}
