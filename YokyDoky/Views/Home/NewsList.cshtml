@using PagedList;
@using PagedList.Mvc;

@model IPagedList<Business.Entitys.ArticleListModel>

@{
    ViewBag.Title = "NewsList";
}

<br />
<ul class="nav nav-pills" role="tablist">
    <li role="presentation" class="@(ViewBag.category == 0 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=0">전체</a></li>
    <li role="presentation"  class="@(ViewBag.category == 1 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=1">문화</a></li>
    <li role="presentation"  class="@(ViewBag.category == 2 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=2">경제</a></li>
    <li role="presentation"  class="@(ViewBag.category == 3 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=3">국제</a></li>
    <li role="presentation"  class="@(ViewBag.category == 4 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=4">과학/IT</a></li>
    <li role="presentation"  class="@(ViewBag.category == 5 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=5">정치</a></li>
    <li role="presentation"  class="@(ViewBag.category == 6 ? "active" : "")"><a href="~/Home/NewsList?id=@ViewBag.memberId&category=6">사회</a></li>
</ul>

<br />
@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Html.DisplayFor(modelItem => item.title)</div>
        <div class="panel-body">
            <p>
              리포터 : @Html.DisplayFor(modelItem => item.reporter) <br />
              작성일시 : @Html.DisplayFor(modelItem => item.write_date)<br />
              수정일시 : @Html.DisplayFor(modelItem => item.modify_date)<br />
              키워드 : @Html.DisplayFor(modelItem => item.keyword)
            </p>
            @Html.DisplayFor(modelItem => item.content)
        </div>
    </div>

}

<div class="row">
    <center>
        @Html.PagedListPager(Model, page => Url.Action("NewsList", new {id = Session[YokyDoky.claGlobal.SessionString_UserKey], category = ViewBag.category ,page }))
    </center>
</div>